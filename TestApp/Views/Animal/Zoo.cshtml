@using TestApp.Models
@model Animal
@{
    ViewBag.Title = "The Zoo (contains Animal details)";
}

<h1>Zoo</h1>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Species</th>
            <th># of Legs</th>
            <th>Diet</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Species</td>
            <td>@Model.Legs</td>
            <td>@Model.Diet</td>
        </tr>
        <tr>
            <td>Octopus</td>
            <td>8</td>
            <td>Not sure, little fish I guess</td>
        </tr>
        <tr>
            <td>Golden eagle</td>
            <td>2</td>
            <td>Deer, birds, monkeys</td>
        </tr>
    </tbody>
</table>

